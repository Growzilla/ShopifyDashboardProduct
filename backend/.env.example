# EcomDash V2 API Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=EcomDash V2 API
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Database (PostgreSQL with asyncpg)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecomdash_v2
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis (optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-at-least-32-characters-long-here
ENCRYPTION_KEY=your-encryption-key-32-chars-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://admin.shopify.com

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,read_orders,read_customers,read_inventory,read_discounts
SHOPIFY_APP_URL=https://your-app-domain.com

# DeepSeek via OpenRouter (Primary AI Provider - Recommended for 90% cost savings)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
DEEPSEEK_MODEL=deepseek/deepseek-chat
DEEPSEEK_REASONER_MODEL=deepseek/deepseek-reasoner
PREFER_DEEPSEEK=true

# OpenAI (Fallback - Optional, only needed if you want fallback capability)
OPENAI_API_KEY=sk-your-openai-api-key-optional
OPENAI_MODEL=gpt-4-turbo-preview

# Pattern Analysis Settings
ENABLE_PATTERN_ANALYSIS=true
PATTERN_ANALYSIS_MAX_DAYS=30
PATTERN_ANALYSIS_CACHE_TTL=3600

# Notifications (Resend for email)
RESEND_API_KEY=re_your_resend_api_key
APP_URL=https://ecomdash.onrender.com

# Adaptive Scheduling Thresholds
TRAFFIC_THRESHOLD=1000
PENDING_THRESHOLD=50
ANALYSIS_BATCH_SIZE=100

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Observability (optional)
SENTRY_DSN=
ENABLE_METRICS=true
